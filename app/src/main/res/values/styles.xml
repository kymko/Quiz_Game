<?xml version="1.0" encoding="utf-8"?>

<!-- Light theme mode -->
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="android:colorAccent">@color/design_default_color_primary_variant</item>
    </style>

    <!-- Dark theme mode -->
    <style name="darkTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="android:colorAccent">@color/design_default_color_primary_variant</item>
    </style>


</resources>